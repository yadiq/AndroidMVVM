<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--相机-->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />

    <!--权限获取库-->
    <permission-group android:name="${applicationId}.andpermission" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <!--屏幕适配，最小宽度-->
        <meta-data
            android:name="design_width_in_dp"
            android:value="360" />

        <!--configChanges写全
        "orientation" 屏幕方向改变
        "screenSize" 屏幕大小改变
        "smallestScreenSize" 物理屏幕尺寸发生变更
        "screenLayout" 屏幕的显示发生变化
        "navigation" 导航发生了变化
        "keyboard" 键盘发生了改变
        "keyboardHidden" 键盘的可用性发生了改变
        "touchscreen" 触摸屏改变
        "fontScale"	字体比例发生变化
        "locale" 所在地区发生变化-->

        <activity
            android:name=".ui.login.LoginActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|navigation|keyboard|keyboardHidden|touchscreen|fontScale|locale"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|navigation|keyboard|keyboardHidden|touchscreen|fontScale|locale"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.repos.ReposDetailActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|navigation|keyboard|keyboardHidden|touchscreen|fontScale|locale"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.follow.ProfileDetailActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|navigation|keyboard|keyboardHidden|touchscreen|fontScale|locale"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.fileupdown.FileUpDownActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|navigation|keyboard|keyboardHidden|touchscreen|fontScale|locale"
            android:screenOrientation="portrait" />

        <activity
            android:name=".zxing.ZxingCaptureActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|navigation|keyboard|keyboardHidden|touchscreen|fontScale|locale"
            android:exported="false"
            android:screenOrientation="portrait" />


        <!--使用content://Uri格式的URI替代file://Uri-->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>